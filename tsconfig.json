{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "srcbuild",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": [
        "build",
        "scripts"
    ]
}